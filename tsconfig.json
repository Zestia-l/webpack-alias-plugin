{
    "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "lib": ["ES6", "DOM"],
      "outDir": "./dist",
      "rootDir": "./packages",
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "strict": true,
      "sourceMap": true,
      "types":["node"],
    },
    "references": [
      { "path": "./packages/main-app" },
      { "path": "./packages/sdk"},
      { "path": "./plugins/webpack-alias-plugin"}
    ],
    "exclude": ["node_modules"]
  }